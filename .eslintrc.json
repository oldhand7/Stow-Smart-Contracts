{
  "env": {
    "node": true,
    "mocha": true,
    "commonjs": true
  },
  "extends": ["airbnb","prettier"],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "globals": {
    "assert": true,
    "web3": true,
    "artifacts": true,
    "contract": true
  },
  "rules": {
    "no-underscore-dangle": "off",
    "comma-dangle": 0,
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-unused-expressions": [
      "error", 
      {"allowTernary": true}
    ]
  }
}
